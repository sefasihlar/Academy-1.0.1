@using static System.Collections.Specialized.BitVector32;
@model AppUserListModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="content d-flex flex-wrap justify-content-between">
    <div class="container-fluid p-0">

        <h1 class="h3 mb-3"><strong>Öğrenci</strong> Ekleme Sayfası</h1>

        <div class="row">
            <div class="d-flex">
                <div class="w-100">
                    <div class="row">

                        <div class="card flex-fill col-12 " style="border-radius: 25px;
																				box-shadow: 0 0 0 4px white, 0 4px 4px black;overflow-y:hidden;">
                            <div class="row">
                                <div class="card-header col-10">
                                    <h5 class="card-title mb-0">Konular</h5>
                                </div>
                                <div class="yetkili_btn col-2">

                                    <a style="color:white" id="myBtn">
                                        <strong>Yeni Öğrenci Ekle </strong>

                                    </a>
                                </div>
                            </div>

                            <table class="table my-0 text-center">
                                <thead>

                                    <tr>
                                        <th class="d-none d-md-table-cell">ID</th>
                                        <th class="d-none d-md-table-cell">TC Kimlik</th>
                                        <th>İsmi</th>
                                        <th>Sınıf</th>
                                        <th>Şube</th>
                                        <th class="d-none d-md-table-cell">Ekleyen ve tarihi</th>
                                        <th class="d-none d-md-table-cell">Değiştiren ve tarihi</th>
                                        <th>Aktiflik durumu</th>
                                        <th>Düzenle veya sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Users)
                                    {
                                        <tr>
                                            <td class="d-none d-md-table-cell">@item.Id</td>
                                            <td class="d-none d-md-table-cell">@item.Tc</td>
                                            <td class="d-none d-md-table-cell">@item.Name</td>
                                            <td class="d-none d-md-table-cell">@item.Class.Name</td>
                                            <td class="d-none d-md-table-cell">@item.Branch.Name</td>
                                            <td class="d-none d-md-table-cell">@item.CreatedDate</td>
                                            <td class="d-none d-md-table-cell">@item.UpdatedDate</td>
                                            <td><span class="badge bg-success">@item.Condition</span></td>
                                            <td>
                                                <a href="../kullanici_ayarlar_duzenlemeler/ögrenci_düzenleme.html"><i class="align-middle" data-feather="edit"></i></a>
                                                <a><i class="align-middle m-2" data-feather="trash-2" style="color: red;"></i></a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    @section  Scripts{
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
    <form asp-controller="Account" asp-action="Register" method="post">
    <div class="popup">
        <div id="myModal" class="modal">
            <div class="medium-modal" id="modal-content1">
                <div class="row d-flex">
                    <div class="col-10">
                        <h3 class="modal-title col-10"><strong> Öğrenci Ekle</strong></h3>
                    </div>
                    <div class="col-2">
                        <span class="close">&times;</span>
                    </div>


                </div>

                    <div class="row">
                        <label  class="col-sm-3 col-form-label">İsmi</label>
                        <div class="col-sm-9">
                            <input class="answer-place text-center"  name="Name" type="text" placeholder="Örneğin:Ahmet">
                        </div>
                    </div>
                    <div class="row">
                        <label  class="col-sm-3 col-form-label">Soyİsmi</label>
                        <div class="col-sm-9">
                            <input class="answer-place text-center" name="SurName" type="text" placeholder="Örneğin:Yılmaz">
                        </div>
                    </div>
                    <div class="row">
                        <label  class="col-sm-3 col-form-label">Tc Kimlik</label>
                        <div class="col-sm-9">
                            <input class="answer-place text-center" name="TcNumber" type="text">
                        </div>
                    </div>
                    <div class="row">
                        <label for="tc" class="col-sm-3 col-form-label">Telefon</label>
                        <div class="col-sm-9">
                            <input class="answer-place" type="text" name="Phone">
                        </div>

                    </div>
                    <div class="row">
                        <label for="tc" class="col-sm-3 col-form-label">Şifre</label>
                        <div class="col-sm-9">
                            <input class="answer-place" type="text" name="Password">
                        </div>

                    </div>
                    <div class="row">
                        <label for="tc" class="col-sm-3 col-form-label">Şifre Tekrar</label>
                        <div class="col-sm-9">
                            <input class="answer-place" type="text" name="RePassword">
                        </div>

                    </div>
                    <div class="row">
                        <label for="Ders" class="col-sm-3 col-form-label">Sınıf</label>
                        <div class="col-sm-9">
                            @await Component.InvokeAsync("ClassList")
                        </div>
                    </div>
                    <div class="row">
                        <label for="Ders" class="col-sm-3 col-form-label">Şube</label>
                        <div class="col-sm-9">
                            @await Component.InvokeAsync("BranchList")
                        </div>
                    </div>
             
                <a id="upper" class="upper_btn">
                    <strong>İleri </strong>
                </a>

            </div>
            <div class="modal-content2" id="modal-content2">
                <span class="close"></span>
                <h2 class="modal-title text-center"><strong> Öğrenci Veli Ekle</strong></h2>
       
                    <div class="row">
                        <label  class="col-sm-3 col-form-label">Veli İsmi</label>
                        <div class="col-sm-9">
                            <input class="answer-place text-center" name="GuardianName" type="text" placeholder="Örneğin:Ahmet">
                        </div>
                    </div>
                    <div class="row">
                        <label  class="col-sm-3 col-form-label">Veli Soyismi</label>
                        <div class="col-sm-9">
                            <input class="answer-place text-center" name="GuardianSurName" type="text" placeholder="Örneğin:Ahmet">
                        </div>
                    </div>
                    <div class="row">
                        <label  class="col-sm-3 col-form-label">Veli İsmi-2</label>
                        <div class="col-sm-9">
                            <input class="answer-place text-center" name="GuardianName2" type="text" placeholder="Örneğin:Ahmet">
                        </div>
                    </div>
                    <div class="row">
                        <label  class="col-sm-3 col-form-label">Veli Soyİsmi-2</label>
                        <div class="col-sm-9">
                            <input class="answer-place text-center" name="GuardianSurName2" type="text" placeholder="Örneğin:Yılmaz">
                        </div>
                    </div>
                    <div class="row">
                        <label for="tc" class="col-sm-3 col-form-label">Veli Telefon</label>
                        <div class="col-sm-9">
                            <input class="answer-place" name="GuardianPhone" type="text">
                        </div>

                    </div>
                    <div class="row">
                        <label for="tc" class="col-sm-3 col-form-label">Veli Telefon 2</label>
                        <div class="col-sm-9">
                            <input class="answer-place" name="GuardianPhone2" type="text">
                        </div>

                    </div>


                <div class="row">
                    <div class="col-9">
                        <a style="top:2%;padding:0%;" class="lower_btn" id="lower_btn">
                            <strong>Geri Dön</strong>
                        </a>
                    </div>
                    <div class="col-3">
                        <button id="cls_btn" type="submit">
                            <strong>Kaydet</strong>
                        </button>

                    </div>
                </div>

            </div>
        </div>

    </div>
    </form>
</main>

