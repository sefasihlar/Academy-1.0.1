@model WebUI.Models.ClassListModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="d-flex">
        <div class="w-100">
            <div class="row">
                <div class="col-sm-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col mt-0">
                                    <h5 class="card-title">Sınıf ekle</h5>
                                </div>
                            </div>
                            <div class="input-group">
                                <form asp-controller="Class" asp-action="Create" method="post" style="display:inline">
                                    <input type="text" name="Name" class="form-control" placeholder="Bir sınıf girin" style="margin-right: 5px;border-radius: 20px;">
                                    <div class="input-group-append">
                                        <button class="btn btn-primary" style="border-radius:20px" type="submit">Ekle</button>
                                    </div>
                                </form>
                                
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card flex-fill col-sm-9">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Sınıflar</h5>
                    </div>
                    <table class="table my-0 text-center">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th class="d-none d-md-table-cell">Sınıf</th>
                                <th class="d-none d-xl-table-cell">Ekleyen ve tarihi</th>
                                <th class="d-none d-xl-table-cell">Değiştiren ve tarihi</th>
                                <th>Aktiflik durumu</th>
                                <th>Düzenle veya sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Classes)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td class="d-none d-md-table-cell">@item.Name</td>
                                    <td class="d-none d-xl-table-cell">İsim-01/01/2021</td>
                                    <td class="d-none d-xl-table-cell">İsim-31/06/2021</td>
                                    <td><span class="badge bg-danger">Pasif</span></td>
                                    <td>
                                        <a href="/Class/Detail/@item.Id"><button class="btn"><i data-feather="edit" style="color:royalblue"></i></button></a>
                                        <form asp-controller="Class" asp-action="Delete" method="post" style="display:inline">
                                            <input type="hidden" name="Id" value="@item.Id" />
                                            <button class="btn" type="submit" style=""><i data-feather="trash-2" style="color: red;"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

