@model WebUI.Models.QuestionListModel
@{
    ViewData["Title"] = "Index";
}
<main class="content">
    <div class="container-fluid p-0">

        <h1 class="h3 mb-3"><strong>Yetkili</strong> Soru Sayfası</h1>
        <div class="row">
            <div class="d-flex">
                <div class="w-100">
                    <div class="row">
                        <div class="page-search">
                            <div class="search-place">
                                <button class="toggle-button dropdown" data-feather="arrow-left"></button>
                                <span class="toggle-content"><strong>Matematik</strong></span>
                                <button class="toggle-button" data-feather="arrow-right"></button>
                            </div>
                            <div class="search-place">
                                <button data-feather="arrow-left"></button>
                                <span><strong>Üslü Sayılar</strong></span>
                                <button data-feather="arrow-right"></button>
                                <button id="myBtn" class="rapor_button">
                                    <strong>Yeni Soru Ekle </strong>

                                </button>
                            </div>
                            <h1 class="text-center">Matematik Soruları</h1>
                        </div>

                        <div class="questions-container">
                            @foreach (var item in Model.Questions)
                            {
                                <div class="question-content">
                                    <input type="checkbox" onclick="changeProp(this)">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h4><strong>Soru-@item.Id</strong></h4>
                                        </div>
                                        <div class="col-md-6">
                                            <a href="" id="question-review-icon">
                                                <i class="bi bi-pencil-square">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                                    </svg>
                                                </i>
                                            </a>
                                        </div>
                                    </div>

                                    <img src="/Template/questions/@item.ImageUrl"/>
                                     <span>@item.Text</span>
                                    <span class="question-info"><strong>@item.QuestionText?</strong></span>
                                    <div class="question-answer-list">
                                        @foreach (var option in item.Options.Where(x=>x.QuestionId==item.Id).ToList())
                                        {
                                            <span><strong>@option.Name)</strong> @option.Text</span>

                                            <br>
                                        }    
                                   
                                    </div>
                                </div>
                            }    
                            
                        </div>
                    </div>

                
                </div>
            </div>
        </div>
    </div>
    <div class="popup">
        <form asp-controller="Question" asp-action="Create" method="post" enctype="multipart/form-data">
            <div id="myModal" class="modal">
                <div class="modal-content" id="modal-content1">
                    <span class="close">&times;</span>
                    <h2 class="modal-title text-center"><strong> Soru Ekle</strong></h2>

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group row d-flex">
                                <label for="Ders" class="col-sm-2 col-form-label ">Soru</label>
                                <div class="col-sm-10">
                                    <input class="form-dropdown text-center" type="text" name="QuestionText" placeholder="Aşagıdakiler hangisi doğrudur?">
                                </div>
                                <label for="Ders" class="col-sm-2 col-form-label">Dersler</label>
                                <div class="col-sm-10">
                                    @await Component.InvokeAsync("LessonList")
                                </div>
                                <label for="Ders" class="col-sm-2 col-form-label">Konular</label>
                                <div class="col-sm-10">
                                    @await Component.InvokeAsync("SubjectList")
                                </div>
                                <label for="Ders" class="col-sm-2 col-form-label">Seviye</label>
                                <div class="col-sm-10">
                                    @await Component.InvokeAsync("LevelList")
                                </div>
                                <label for="Ders" class="col-sm-2 col-form-label">Çıktı</label>
                                <div class="col-sm-10">
                                    @await Component.InvokeAsync("OutputList")
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="big-text d-flex ">
                                <h5>
                                    <strong>Soru Metini:</strong> </h4><br>

                                    <textarea id="big-text" class="input" name="Text"></textarea>
                            </div>
                            <input type="file" id="fileUpload" name="file">
                        </div>
                    </div>

                    <a type="btn" id="upper" class="upper_btn">
                        <strong>İlerle </strong>
                    </a>
                </div>
                @await Component.InvokeAsync("Option")
        </form>
