@model WebUI.Models.LessonListModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dersler</h1>
<div class="row">
	<div class="d-flex">
		<div class="w-100">
			<div class="row">
				<div class="col-sm-3">
					<div class="card">
						<div class="card-body">
							<div class="row">
								<div class="col mt-0">
									<h5 class="card-title">Ders ekle</h5>
								</div>
							</div>
							<div>
								@await Component.InvokeAsync("ClassList")
							</div>
						</div>
					</div>
				</div>

				<div class="card flex-fill col-sm-9">
					<div class="card-header">
						<h5 class="card-title mb-0">Dersler</h5>
					</div>
					<table class="table my-0 text-center">
						<thead>
						
							<tr>
								<th class="d-none d-md-table-cell">ID</th>
								<th>Ders</th>
								<th>Sınıf</th>
								<th class="d-none d-md-table-cell">Ekleyen ve tarihi</th>
								<th class="d-none d-md-table-cell">Değiştiren ve tarihi</th>
								<th>Aktiflik durumu</th>
								<th>Düzenle veya sil</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model.Lessons)
							{
								<tr>
									<td class="d-none d-md-table-cell">@item.Id</td>
									<td>@item.Name</td>
									<td>@item.Class.Name</td>
									<td class="d-none d-md-table-cell">İsim-31/06/2021</td>
									<td class="d-none d-md-table-cell">İsim-21/01/2021</td>
									<td><span class="badge bg-success">Aktif</span></td>
									<td>
										<a href="../yetkili_islem_düzenle/yetkili_ders_düzenle.html"><i class="align-middle" data-feather="edit"></i></a>
										<a><i class="align-middle m-2" data-feather="trash-2" style="color: red;"></i></a>
									</td>
								</tr>
							}
					
					
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

